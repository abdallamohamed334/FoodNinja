<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grade"
    tools:context=".NiniaSplash">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="619dp"
        android:layout_height="380dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.36"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pattern" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.163"
        app:srcCompat="@drawable/logono" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="267dp"
        android:layout_height="44dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="FoodNinja"
        android:textColor="#53E88B"
        android:textSize="34dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageView5"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="@+id/imageView5"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="330dp"
        android:layout_height="26dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="Deliver Favorite Food"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.063" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="303dp"
        android:layout_height="35dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="Login To Your Account"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="1.0" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="416dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/textView6"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/imageView4">

        <EditText
            android:id="@+id/emailsign"
            android:layout_width="388dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/colorlogin"
            android:drawableStart="@drawable/mail"
            android:drawablePadding="10dp"
            android:elevation="10dp"
            android:ems="10"
            android:hint="Email"
            android:inputType="textPersonName"
            android:padding="10dp" />

        <EditText
            android:id="@+id/pawwordsign"
            android:layout_width="392dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:background="@drawable/colorlogin"
            android:drawableStart="@drawable/password"
            android:drawableEnd="@drawable/ic_baseline_remove_red_eye_24"
            android:drawablePadding="20dp"
            android:elevation="5dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="numberPassword"
            android:paddingLeft="20dp"
            android:paddingTop="5sp"
            android:paddingEnd="10dp" />

    </LinearLayout>

    <Button
        android:id="@+id/nextupload"
        android:layout_width="189dp"
        android:layout_height="64dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/colorbutton"

        android:drawableEnd="@drawable/ic_baseline_navigate_next_24"
        android:fontFamily="monospace"
        android:gravity="center"
        android:letterSpacing="0.1"
        android:paddingRight="10dp"
        android:text="Login"
        android:textColor="#FFFFFF"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewPager2"
        app:layout_constraintVertical_bias="0.732"
        android:elevation="10dp"/>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="413dp"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.238">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="57dp"
            android:layout_height="76dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:background="@drawable/colorlogin"
            android:drawableStart="@drawable/face"
            android:elevation="10dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="Facebook"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="73dp"
            android:layout_height="76dp"
            android:layout_marginStart="10dp"

            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:background="@drawable/colorlogin"
            android:drawableStart="@drawable/google"
            android:elevation="10dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="Google"
            android:textColor="@color/black" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="248dp"
        android:layout_height="33dp"
        android:layout_marginTop="9dp"
        android:gravity="center"
        android:text="Or Continue With"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:text="Forget Your Password ?"
        android:textColor="#4DA800"
        android:shadowColor="@color/black"
        android:fontFamily="sans-serif"
        android:textStyle="bold"

        app:layout_constraintBottom_toTopOf="@+id/nextupload"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>