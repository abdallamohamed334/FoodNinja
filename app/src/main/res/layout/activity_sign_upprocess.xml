<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grade"
    tools:context=".SignUpprocess">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="492dp"
        android:layout_height="268dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/process" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="56dp"
        android:layout_height="51dp"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toTopOf="@+id/textView8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.056"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView6"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/rectangle" />

    <ImageView
        android:id="@+id/backintent"
        android:layout_width="48dp"
        android:layout_height="42dp"
        android:paddingStart="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.011"
        app:layout_constraintStart_toStartOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="@+id/imageView7"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ic_baseline_arrow_back_ios_24" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="321dp"
        android:layout_height="76dp"
        android:fontFamily="sans-serif-black"
        android:lineHeight="32.76dp"
        android:text="Fill in your bio to get \n started"
        android:textColor=" #09051C"

        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.222"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView6"
        app:layout_constraintVertical_bias="0.479" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="336dp"
        android:layout_height="34dp"
        android:shadowColor="@color/black"
        android:text="This data will be displayed in your account \n profile for security"
        android:textColor="@color/black"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView6"
        app:layout_constraintEnd_toEndOf="@+id/textView8"
        app:layout_constraintHorizontal_bias="0.266"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:layout_constraintVertical_bias="0.242" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="417dp"
        android:layout_height="326dp"
        android:background="@drawable/grade"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView6">

        <EditText
            android:id="@+id/usernamesign"
            android:layout_width="388dp"
            android:layout_height="76dp"
            android:layout_margin="10dp"
            android:background="@drawable/colorlogin"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="Username...."
            android:inputType="textPersonName"
            android:padding="10dp"
            android:shadowColor="#5A6CEA12"
            android:elevation="10dp"/>

        <EditText
            android:id="@+id/emailsign"
            android:layout_width="388dp"
            android:layout_height="76dp"
            android:layout_margin="10dp"
            android:background="@drawable/colorlogin"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="Firstname.."
            android:inputType="textPersonName"
            android:padding="10dp"
            android:shadowColor="#5A6CEA12"
            android:elevation="10dp"/>

        <EditText
            android:id="@+id/pawwordsign"
            android:layout_width="388dp"
            android:layout_height="76dp"
            android:layout_margin="10dp"
            android:background="@drawable/colorlogin"
            android:drawablePadding="20dp"
            android:elevation="10dp"
            android:ems="10"
            android:hint="Phone Number"
            android:inputType="numberPassword"
            android:padding="10dp"
            android:shadowColor="#5A6CEA12" />

    </LinearLayout>

    <Button
        android:id="@+id/nextupload"
        android:layout_width="189dp"
        android:layout_height="64dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/colorbutton"

        android:drawableEnd="@drawable/ic_baseline_navigate_next_24"
        android:fontFamily="monospace"
        android:gravity="center"
        android:letterSpacing="0.1"
        android:paddingRight="10dp"
        android:text="Next"
        android:textColor="#FFFFFF"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewPager2"
        app:layout_constraintVertical_bias="0.732" />

</androidx.constraintlayout.widget.ConstraintLayout>